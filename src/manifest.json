{
    "name": "AutoBGM",
    "description": "Auto play/pause your music.",
    "version": "0.2",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "commands"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    },
    "commands": {
        "switch_tab": {
            "suggested_key": {
                "default": "Alt+A"
            },
            "description": "Play/Pause audio on first pinned tab",
            "global": true
        }
    }
}